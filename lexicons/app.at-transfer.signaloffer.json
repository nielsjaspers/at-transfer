{
  "lexicon": 1,
  "id": "app.at-transfer.signaloffer",
  "defs": {
    "main": {
      "type": "record",
      "description": "WebRTC signaling offer with optional file metadata for AT-Transfer, identified by a session timestamp.",
      "properties": {
        "sdp": {
          "type": "string",
          "description": "Session Description Protocol (SDP) offer"
        },
        "fileName": {
          "type": "string",
          "description": "Optional file name to transfer"
        },
        "fileSize": {
          "type": "integer",
          "description": "Optional file size in bytes"
        },
        "sessionTimestamp": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp (ISO8601 format) uniquely identifying this transfer session, generated by the sender."
        }
      },
      "required": ["sdp", "sessionTimestamp"]
    }
  }
}
